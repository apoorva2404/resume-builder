<div class="row">
    <h1>Sign Up</h1>
    <h6 class="information-text">Open a New Account with Us.</h6>
    <form method="post" action="/myaction">
        <div class="form-group">
            <input type="text" name="username" id="username" required>
            <p><label for="username">Username</label></p>
            <input type="email" name="user_email" id="user_email">
            <p><label for="password">Email</label></p>
            <input type="password" name="password" id="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                required>
            <p><label for="password">Password</label></p>
            <input type="password" name="password" id="ConfirmPassword">
            <p><label for="password">Re-type Password</label></p>
            <button onclick="validate()" id="button">Register Account</button>
        </div>
        <div class="footer">
            <h5>Already have an account? <a href="/">Sign In.</a></h5>

        </div>
    </form>
</div>