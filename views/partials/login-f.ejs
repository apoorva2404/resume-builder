<div class="row no-gutters">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div id="login-form-box">
            <div class="text-center login-img">
                <img src="http://www.1000springs.org.nz/static/img/icons/login.png">
            </div>
            <form id="login-form" action="/myloginaction" method="post">
                <div class="form-group">
                    <input type="email" id="eml" name="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="password" id="psw" name="password" class="form-control" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                        title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                        required>
                </div>
                <div class="form-group text-center">
                    <input type="submit" id="submit-button" class="btn" value="Login">
                </div>
                <span>Don't have a account?</span>
                <a href="signup.html">Sign up?</a>


            </form>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>